
<h1><%= @place.name %></h1>

<% if @checks.blank? %>
	No Checks
<% else %>
	<% @checks.each do |check| %>
		<% user = User.find(check.user_id) %>
		<p><%= check.comment %> <%= check.guide %> by <%= link_to user.name, user %> <%= link_to "Edit", edit_place_check_path(@place, check) %></p>
	<% end %>
<% end %>





<%= link_to "Write a new Check", new_place_check_path(@place) %>

<% if @place.user == current_user %>
	<%= link_to 'Edit', edit_place_path(@place) %>
<% end %>
<%= link_to 'Back', places_path %>
